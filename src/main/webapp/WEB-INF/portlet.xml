<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.0" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
  <portlet>
    <description>Ajax</description>
    <portlet-name>ajax</portlet-name>
    <display-name>Wicket Ajax Example Portlet</display-name>
    <portlet-class>org.apache.wicket.portlet.WicketPortlet</portlet-class>
    <init-param>
      <name>wicketFilterPath</name>
      <value>/ajax</value>
    </init-param>
    <init-param>
      <name>clear-request-parameters</name>
      <value>true</value>
    </init-param>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>VIEW</portlet-mode>
      <portlet-mode>EDIT</portlet-mode>
    </supports>
    <supports>
      <mime-type>text/xml</mime-type>
      <portlet-mode>VIEW</portlet-mode>
      <portlet-mode>EDIT</portlet-mode>
    </supports>
    <portlet-info>
      <title>Ajax Example Portlet</title>
      <keywords>Wicket</keywords>
    </portlet-info>
  </portlet>
  <container-runtime-option>
    <name>javax.portlet.escapeXml</name>
    <value>false</value>
  </container-runtime-option>
</portlet-app>